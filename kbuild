menu "Drivers"

menu "Switch"

config SWITCH
	bool "Switch"
	select SWITCH_AR8327N if !SWITCH_AR8316
	depends on BOARD_WDBWVK0000NSL || BOARD_WDBKSP0010BCH || BOARD_WDBKSP0020BCH  || BOARD_DIR827A1 || BOARD_DIR857A1 || BOARD_DIR657A1 || BOARD_UNKNOWN
	default n
	help
		Network switch support

config SWITCH_AR8327N
	bool "AR8327N"
	depends on SWITCH && (BOARD_WDBWVK0000NSL || BOARD_WDBKSP0010BCH || BOARD_WDBKSP0020BCH  || BOARD_DIR827A1 || BOARD_DIR857A1 || BOARD_UNKNOWN)
	default n
	help
		Network switch AR8327N

#config SWITCH_AR8316
#	bool "AR8316"
#	depends on SWITCH && (BOARD_DIR657A1 || BOARD_UNKNOWN)
#	default n
#	help
#		Network switch AR8316

endmenu

endmenu

endmenu

