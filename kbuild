menu "Kernel"

menu "Architecture"

config ARCH_UBICOM32
	bool "Ubicom 32"
	default y
	help
		Ubicom32 architecture
choice 

prompt "Revision"

depends on ARCH_UBICOM32

#config ARCH_UBICOM32_V4
#	bool "v4"
#	depends on ARCH_UBICOM32 && (BOARD_DIR657A1 || BOARD_UNKNOWN)
#	help
#		Ubicom32 revision 4

config ARCH_UBICOM32_V5
	bool "v5"
	depends on ARCH_UBICOM32 && (BOARD_WDBWVK0000NSL || BOARD_WDBKSP0010BCH || BOARD_WDBKSP0020BCH  || BOARD_DIR827A1 || BOARD_DIR857A1 || BOARD_UNKNOWN)
	help
		Ubicom32 revision 5
endchoice

choice

depends on ARCH_UBICOM32

prompt "Processor"

