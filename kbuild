config ARCH_UBICOM32_IP8260U
	bool "IP8260U"
	depends on ARCH_UBICOM32 && ARCH_UBICOM32_V5 && (BOARD_WDBWVK0000NSL || BOARD_WDBKSP0010BCH || BOARD_WDBKSP0020BCH  || BOARD_UNKNOWN)
	help 
		Ubicom32 v5 IP8260UU (5 Hardware threads)

